@model Result

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Routing</title>
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
</head>
<body class="m-1 p-1">
    <table class="table table-bordered table-striped table-sm">
        <tr><th>Controller:</th><td>@Model.Controller</td></tr>
        <tr><th>Action:</th><td>@Model.Action</td></tr>
        @foreach (string key in Model.Data.Keys)
        {
            <tr><th>@key :</th><td>@Model.Data[key]</td></tr>
        }
    </table>
    <a asp-action="CustomVariable" class="btn btn-primary">This is an outgoing URL</a>
    <a asp-action="Index" asp-controller="Customer" class="btn btn-primary">This is another outgoing URL</a>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-primary">This targets another controller</a>
    <a asp-action="List" asp-controller="Customer" asp-route-id="Sun" class="btn btn-primary">This targets other outgoing URL</a>
    <a asp-action="Index" asp-controller="Home" asp-route-id="Sun" asp-protocol="https" asp-host="myserver.mydomain.com" asp-fragment="myFragment" class="btn btn-primary">This is a fully qualified URL</a>
    <a asp-route="out" class="btn btn-primary">This is a route name URL: @Url.Action("CustomVariable", "Home", new { id = 100 })</a>
    <a asp-route-legacyurl="/articles/Windows_3.1_Overview.html" class="btn btn-primary">This is an Legacy MVC URL: @Url.Action(null, null, new { legacyUrl = "/articles/Windows_3.1_Overview.html" })</a>
</body>
</html>