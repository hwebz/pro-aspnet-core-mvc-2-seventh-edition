<!DOCTYPE html>
<html>
<head>
    <title>@(ViewBag.Title ?? "SportsStore Application")</title>
    @*<link href="~/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />*@
    <link asp-href-include="~/lib/bootstrap/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*" rel="stylesheet" />
    <link asp-href-include="~/lib/font-awesome/**/*.min.css" rel="stylesheet" />
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-action="List" asp-controller="Order">Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-action="List" asp-controller="Product" asp-route-category="">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="List" asp-controller="Order">Unshipped Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Index" asp-controller="Admin">Products</a>
                </li>
            </ul>
            <div class="form-inline my-2 my-lg-0">
                <a asp-action="Logout" asp-controller="Account" class="btn btn-sm btn-primary">Log Out</a>
            </div>
        </div>
    </nav>
    <div class="row m-1 p-1">
        <div class="col-12">
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success">@TempData["message"]</div>
            }
            @RenderBody()
        </div>
    </div>
    @*<script src="~/vendor/jquery/dist/jquery.min.js"></script>
        <script src="~/vendor/bootstrap/dist/js/bootstrap.min.js"></script>*@
    <script asp-src-include="~/lib/jquery/*.min.js" asp-src-exclude="**/*slim*"></script>
    <script asp-src-include="~/lib/bootstrap/*.min.js" asp-src-exclude="**/*bundle*"></script>
    <script asp-src-include="~/lib/jquery-validation/*.validate.min.js"></script>
    <script asp-src-include="~/lib/jquery-validation-unobtrusive/*.validate.*.min.js"></script>
</body>
</html>